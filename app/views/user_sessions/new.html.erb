<div class="page-content">
<div class="login-form">
<%= form_for @user_session, url: user_session_url do |f| %>
  <% if @user_session.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited:</h2>
    <ul>
      <% @user_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <%= f.label :login , class: "form-label" %><br />
  <%= f.text_field :login, class: "form-field" %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password , class: "form-field"%><br />
  <br />
  <%= f.label :remember_me , class: "form-label" %><br />
  <%= f.check_box :remember_me %><br />
  <br />
  <%= f.submit "Login", class:"form-button" %>
<% end %>
</div>
</div>