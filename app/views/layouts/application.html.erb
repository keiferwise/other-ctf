<!DOCTYPE html>
<html>
  <head>
    <title><%= Contest.find_by(active: 1).title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed&display=swap" rel="stylesheet"> 
  </head>

  <body>
    <div>
      <%= render 'header'%>
    </div>

    <div class='botm-half-cntr'> <!-- This contains everything below the header-->
      <div><!-- This will be our sidebar-->
        <%= render 'sidebar'%>
      </div> 
      <div class='bottom-right-cntr'> <!-- This contains both the botton of the header and the main content of the page-->
        <div class='bottom-header-bar'><!-- This will be our header bottom element-->
          <div class="top-bar-cntr">
            <div class="top-right-bar-6"></div>
            <div class="top-right-bar-5"></div>
            <div class="top-right-bar-2"></div>
            <div class="top-right-bar-4"></div>
            <div class="top-right-bar-3"></div>
          </div>
          <div class="bottom-arch-bg"> <div class="bottom-arch"></div></div>
        </div> <!-- This will contain the main content-->
        <div class="page-content">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
